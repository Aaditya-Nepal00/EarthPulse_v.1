{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "backend/**"
        ]
    },
    "deploy": {
        "startCommand": ". .venv/bin/activate && uvicorn app.main:app --host 0.0.0.0 --port $PORT",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}